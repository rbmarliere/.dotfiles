    fa = fetch --all
    ff = merge --ff-only
    noff = merge --no-ff
    po = push origin
    pom = push origin master
    pullff = pull --ff-only
    r = !git l
    ra = !git r --all
    st = status
    l = log --graph --decorate --oneline --date=short --pretty=format:'%C(yellow)%h %C(green)%ad %C(cyan)%an %C(bold red)%d %C(reset)%s'
    la = !git l --name-status
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
