[alias]
	aa = add --all
	amend = commit --amend
	br = branch
	ci = commit --verbose
	co = checkout
	d = diff
	dc = diff --cached
	dt = difftool
	dct = difftool --cached
	fa = fetch --all
	ff = merge --ff-only
	noff = merge --no-ff
	po = push origin
	pom = push --set-upstream origin main
	pullff = pull --ff-only
	r = !git l --graph
	ra = !git r --all
	st = status
	l = log --decorate --oneline --date=short --pretty=format:'%C(yellow)%h %C(green)%ad %C(cyan)%an %C(bold red)%d %C(reset)%s'
	la = !git l --name-status
	w = worktree

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
	prompt = false
	trustExitCode = true

[pull]
	ff = only

[bash]
	showDirtyState = true

[init]
	defaultBranch = "main"

[format]
	signoff = true

[sendemail]
	smtpuser =
	smtpserver = "/usr/bin/msmtp"
	smtpencryption = tls

[push]
	autoSetupRemote = true

[core]
	abbrev = 12
[pretty]
	fixes = Fixes: %h (\"%s\")
[advice]
	detachedHead = false
