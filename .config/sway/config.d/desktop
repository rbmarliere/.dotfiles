# vim: ft=swayconfig

set $resH 286px

set $first exclam
set $second parenleft
set $third bracketleft
set $fourth braceleft
set $fifth ampersand
set $sixth asterisk
set $seventh braceright
set $eighth bracketright
set $ninth parenright
set $tenth plus
set $eleventh minus

bindsym $mod+Shift+r exec swaymsg resize set width 1400 px height 1400 px
bindsym $mod+n exec ~/.local/bin/notes

set $out1 "Samsung Electric Company LC34G55T H4ZT500316"
output $out1 pos 2560 0
# only needed for nouveau
#output $out1 mode --custom 3440x1440@59.973Hz pos 2560 0
workspace 1 output $out1
workspace 2 output $out1
workspace 3 output $out1
workspace 4 output $out1
workspace 5 output $out1

set $out2 "HSX BM274K1W 0x000F69B5"
output $out2 resolution 2560x1440 scale 1 pos 0 0
workspace 6 output $out2
workspace 7 output $out2
workspace 8 output $out2
workspace 9 output $out2

set $out3 "Dell Inc. DELL P2222H 14XP8Q3"
output $out3 pos 6000 0 transform 270
workspace 10 output $out3
workspace 11 output $out3

input type:keyboard {
	xkb_layout rbm
	xkb_options caps:shiftlock
	# inspired by https://github.com/ThePrimeagen/keyboards
}

for_window [app_id="evolution-alarm-notify"] floating enable
for_window [app_id="notes"] floating enable, resize set width 800 px height 800 px, sticky enable

assign [app_id="firefox"] 1
assign [app_id="evolution$"] 6
assign [class="Slack"] 6
assign [app_id="org.telegram.desktop"] 7
assign [class="discord"] 7
assign [app_id="org.gnome.Fractal"] 8
assign [app_id="first_term"] 10

exec /usr/bin/tmux new-session -d "~/.config/tmux/plugins/tmux-resurrect/scripts/restore.sh"

exec swaymsg workspace 10 && swaymsg layout tabbed && foot -a first_term

exec sleep 1 && firefox
exec sleep 2 && flatpak run com.discordapp.Discord
exec sleep 2 && flatpak run org.telegram.desktop
exec sleep 2 && flatpak run org.gnome.Fractal
exec sleep 3 && evolution
exec sleep 4 && flatpak run com.slack.Slack

exec sleep 5 && foot -H bash -l -c "sway.neomutt"
exec sleep 7 && foot -H bash -l -c "sway.weechat"
exec sleep 9 && foot -H bash -l -c "sway.newsboat"
