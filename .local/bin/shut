#!/bin/bash

if [ -n "$TMUX" ]; then
	tmux detach-client -E "/bin/bash -lc 'shut $*'"
	exit
fi

read -p "Shutdown? [y|N] " ans
ans=${ans:-N}
if [[ ! "$ans" =~ ^[Yy]$ ]]; then
	exit
fi

if root_runner "systemctl --user status tmux >/dev/null 2>&1"; then
	root_runner "systemctl --user stop tmux"
fi

root_runner "sudo shutdown -h --no-wall now"

