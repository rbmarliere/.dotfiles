[alias]
	aa = add --all
	amend = commit --amend
	br = branch
	ci = commit
	co = checkout
	d = diff
	dc = diff --cached
	dct = difftool --cached
	dt = difftool
	pa = !git --no-pager diff --no-color
	fa = fetch --all
	ff = merge --ff-only
	l = log --decorate --oneline --date=short --pretty=format:'%C(yellow)%h %C(green)%ad %C(cyan)%an %C(bold red)%d %C(reset)%s'
	la = !git l --name-status
	noff = merge --no-ff
	po = push origin
	pom = push --set-upstream origin main
	pullff = pull --ff-only
	r = !git l --graph
	ra = !git r --all
	ri = rebase -i
	st = status
	w = worktree

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool]
	prompt = false
	trustExitCode = true

[pull]
	ff = only

[bash]
