#!/bin/bash

echo -ne "\033]0;mail\007"
sleep 1

TMUX="tmux -L mail"
if ! $TMUX list-sessions 2>/dev/null; then
	$TMUX new-session -d -s mail -c "$HOME/mail"
	$TMUX set-option -pg allow-rename off
	$TMUX set-option -wg automatic-rename off
	$TMUX set-option -g set-titles off

	$TMUX send-keys "journalctl --user -xefu notmuch; exec bash" C-m
	$TMUX new-window -t "mail:1" -n "aerc"
	$TMUX send-keys "aerc; exec bash" C-m
fi

$TMUX attach -t mail
